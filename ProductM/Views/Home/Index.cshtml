@using ProductM.Models
@model List<ProductM.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">Ürün Listesi</h1>

    <p>
        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                <th></th> @* Detay, Düzenle, Sil butonları için boş başlık *@
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a> |
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> |
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">Henüz hiç ürün eklenmemiş.</td>
                </tr>
            }
        </tbody>
    </table>
</div>